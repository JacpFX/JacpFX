#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="${package}"/>
    <context:annotation-config/>

	<bean id="workbench" class="${package}.workbench.Workbench">
		<property name="perspectives">
			<list>
				<ref bean="perspectiveTwo" />
				<ref bean="perspectiveOne" />
			</list>
		</property>
	</bean>

	<bean id="perspectiveTwo" class="${package}.perspectives.PerspectiveTwo">
		<property name="subcomponents">
			<list>
				<ref bean="componentTop" />
				<ref bean="componentBottom" />
			</list>
		</property>
	</bean>

	<bean id="perspectiveOne" class="${package}.perspectives.PerspectiveOne">
		<property name="subcomponents">
			<list>
				<ref bean="componentLeft" />
				<ref bean="componentRight" />
				<ref bean="statefulCallback" />
				<ref bean="statelessCallback" />
			</list>
		</property>
	</bean>


	<bean id="componentLeft" class="${package}.components.ComponentLeft" />

	<bean id="componentRight" class="${package}.components.ComponentFXMLRight" />

	<bean id="componentTop" class="${package}.components.ComponentTop" />

	<bean id="componentBottom" class="${package}.components.ComponentFXMLBottom" />

	<bean id="statefulCallback" class="${package}.callbacks.StatefulCallback" />

	<bean id="statelessCallback" class="${package}.callbacks.StatelessCallback" />
</beans>